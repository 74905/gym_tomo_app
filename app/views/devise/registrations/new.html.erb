<div class="container">
   <div class="row">
     <div class="col-5">
      <h3>新規会員登録</h3>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
             <div class="filed">
               <%= f.label "ニックネーム(2文字以上)" %><br />
               <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
             </div>

              <div class="field">
                <%= f.label "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
                  
                    <div class="field">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

            <div class="actions mt-3">
              <%= f.submit "新規登録", class:"btn btn-success" %>
            </div>
            <% end %>
       <%= render "devise/shared/links" %>
     </div>
      <div class="col-7">
        <h4 class="mt-2 mb-0 mx-auto">ボディビルダー格言集・海外編(不定期更新)</h4>
             <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="5000" data-pause="hover">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div class="image1 d-block w-100"></div>
              </div>
              <div class="carousel-item">
                <div class="image2 d-block w-100"></div>
              </div>
              <div class="carousel-item">
                <div class="image3 d-block w-100"></div>
              </div>
              <div class="carousel-item">
                <div class="image4 d-block w-100"></div>
              </div>
               <div class="carousel-item">
                <div class="image5 d-block w-100"></div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
    </div>
   </div>
