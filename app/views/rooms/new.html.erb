
<h1>ジム作成</h1>
  <%= form_with model: @room, local:true  do |f| %>
   <div class="field">
     <%= f.label"ジム名" %>
     <%= f.text_field :name %>
   </div>
   
   <div class="field">
     <%= f.label"ジム画像" %>
     <%= f.attachment_field :image %>
   </div>
   
   <div class="field">
     <%= f.label"ジム説明" %>
     <%= f.text_area :introduction %>
   </div>
   
   <div class="field">
     <%= f.label"郵便番号" %>
     <%= f.text_field :zipcode %>
   </div>
   
   <div class="field">
     <%= f.label"住所" %>
     <%= f.text_field :address %>
   </div>
   
   <div class="field">
   <%= f.label"電話番号" %>
   <%= f.text_field :phone_number %>
   </div>
   
   <%= f.submit "作成" %>
   <% end %>
  </div>
 </div>