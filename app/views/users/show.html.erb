 <div class="user_image">
  <h1 style="text-shadow: 1px 2px 3px #808080;"><%= @user.name %>さんのプロフィール</h1>
  
    <div class="col-4 mx-auto mb-4" stlye="border-radius: 50%;">
      <%= attachment_image_tag @user, :profile_image, class:"user_image-attachment", format: 'png', fallback: "noimage.png", size: "400x400" %>
    </div>
    
    <div class="card mx-5 text-center">
      <div class="card-header"></div>
       <div class="card-body">
        <h5 class="card-title">自己紹介文</h5>
         <p class="card-text"><%= simple_format(@user.introduction) %></p>
           <% if @user == current_user %>
             <%= link_to "プロフィールを編集", edit_user_path(@user.id), class:"btn btn-primary" %>
           <% else %>
           <div id="follow_btn_<%= @user.id %>">
             <%= render 'relationships/relationship', {user: @user} %>
           </div>
           <% end %>
     </div>
    </div>
 </div>